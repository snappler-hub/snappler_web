<!DOCTYPE html>
<html lang="es">
  <head>
    <title><%= t :brand %></title>
    <%= stylesheet_link_tag    'backend', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'backend', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>    
  </head>
  <body>

<div class="navbar navbar-material-light-blue-300">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to t(:brand), root_path, class: 'navbar-brand' %>
  </div>
</div>


    <div id="main" class="container-fluid">
      <div class="row">
        <aside class="col-md-2">

        <ul class="well nav nav-pills nav-stacked">
          <li><%= link_to t(:home) , root_path %></li>
         
          <% if user_signed_in? %>
            <li><%= link_to t(:logout), destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to t(:login), new_user_session_path %></li>
          <% end %>

        </ul>

        </aside>
        <section class="col-md-10">
          <%= yield %>
        </section>
      </div>
    </div>
  </body>
</html>