                <%= form_tag('/send_consult',  :method => :post, :authenticity_token => true, :remote => true, :class => "send_form", :id => 'express_contact') do %>
                
                
                        <div class="row">
                            <div class="form-group col-xs-12 floating-label-form-group">
                                <label for="name">Nombre</label>
                                <input class="form-control" type="text" name="name_surname" id="name_surname" placeholder="Nombre">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-xs-12 floating-label-form-group">
                                <label for="email">Email</label>
